{% extends 'base.html.twig' %}

{% block title %}Hello AnnuaireController!{% endblock %}

{% block body %}


    <div class="container">
        {% for contact in contacts %}
        <div class="card shadow m-2 p-3">
            <div class="card-body">
            <h5 class="card-title">{{ contact.nom }} {{ contact.prenom }}</h5>
            <p class="card-text">{{ contact.telephone }}</p>
            </div>
        </div>
        {% endfor %}
    </div>


{% endblock %}
